# Force detection of specific file types
*.cs linguist-detectable=true
*.js linguist-detectable=true
*.jsx linguist-detectable=true
*.css linguist-detectable=true

# Exclude specific directories or file types
node_modules/* linguist-detectable=false
dist/* linguist-detectable=false
build/* linguist-detectable=false

# Optional: Exclude certain large or autogenerated HTML files
*.html linguist-detectable=false
